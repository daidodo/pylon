{
  "name": "@dozerg/pylon",
  "version": "1.0.0",
  "description": "Useful functionalities.",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "lint": "tslint -p .",
    "build": "tsc",
    "test": "jest",
    "docs": "typedoc",
    "clean": "rm -rf build",
    "cleanall": "npm run clean && rm -rf node_modules docs *.log *.tgz",
    "prepare": "npm run clean && npm run lint && npm run build",
    "prepublishOnly": "npm run test"
  },
  "author": "Zhao DAI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/daidodo/pylon.git"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 100
  },
  "jest": {
    "clearMocks": true,
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "devDependencies": {
    "@types/jest": "^24.0.25",
    "@types/react-dom": "^16.9.4",
    "@types/react-redux": "^7.1.5",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "react-dom": "^16.12.0",
    "react-redux": "^7.1.3",
    "ts-jest": "^24.2.0",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typedoc": "^0.15.6",
    "typedoc-plugin-markdown": "^2.2.14",
    "typescript": "^3.7.4"
  },
  "dependencies": {
    "@types/react": "^16.9.17",
    "react": "^16.12.0",
    "utility-types": "^3.10.0"
  }
}
